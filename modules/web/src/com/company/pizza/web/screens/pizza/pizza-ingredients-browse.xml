<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://pizzaBrowseIngredients.caption"
        focusComponent="pizzasTable"
        messagesPack="com.company.pizza.web.screens.pizza">
    <data readOnly="true">
        <collection id="pizzasDc"
                    class="com.company.pizza.entity.Pizza">
            <view extends="_local">
                <property name="ingredients" view="_minimal"/>
            </view>
            <loader id="pizzasDl">
                <query>
                    <![CDATA[select e from pizza_Pizza e]]>
                </query>
            </loader>
        </collection>
        <collection id="ingredientsDc" class="com.company.pizza.entity.Ingredient">
            <view extends="_local">
                <property name="topping" view="_minimal"/>
            </view>
            <loader id="ingredientsDl">
                <query>
                    <![CDATA[select e from pizza_Ingredient e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="pizzasTable"
            spacing="true">
        <groupTable id="pizzasTable"
                    width="100%"
                    dataContainer="ingredientsDc">
            <actions>
            </actions>
            <columns>
                <column id="topping"/>
                <column id="weight"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
