<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://ingredientBrowse.caption"
        focusComponent="ingredientsTable"
        messagesPack="com.company.pizza.web.screens.ingredient">
    <data readOnly="true">
        <collection id="ingredientsDc"
                    class="com.company.pizza.entity.Ingredient"
                    view="ingredient-view">
            <loader id="ingredientsDl">
                <query>
                    <![CDATA[select e from pizza_Ingredient e]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.pizza.id = :pizzaId</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ingredientsTable"
            spacing="true">
        <groupTable id="ingredientsTable"
                    width="100%"
                    dataContainer="ingredientsDc">
            <columns>
                <column id="topping"/>
                <column id="weight"/>
            </columns>
            <rowsCount/>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
