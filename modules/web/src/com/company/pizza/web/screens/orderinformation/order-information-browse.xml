<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://orderInformationBrowse.caption"
        focusComponent="orderInformationsTable"
        messagesPack="com.company.pizza.web.screens.orderinformation">
    <data readOnly="true">
        <collection id="orderInformationsDc"
                    class="com.company.pizza.entity.OrderInformation">
            <view extends="_local">
                <property name="courier" view="_minimal"/>
                <property name="order" view="_minimal"/>
            </view>
            <loader id="orderInformationsDl">
                <query>
                    <![CDATA[select e from pizza_OrderInformation e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="orderInformationsTable"
            spacing="true">
        <filter id="filter"
                applyTo="orderInformationsTable"
                dataLoader="orderInformationsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="orderInformationsTable"
                    width="100%"
                    dataContainer="orderInformationsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="clientName"/>
                <column id="adress"/>
                <column id="phoneNumber"/>
                <column id="email"/>
                <column id="courier"/>
                <column id="comment"/>
                <column id="order"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="orderInformationsTable.create"/>
                <button id="editBtn" action="orderInformationsTable.edit"/>
                <button id="removeBtn" action="orderInformationsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
